<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="0.9.0-preview4" />
    <PackageReference Include="Avalonia.Controls.DataGrid" Version="0.9.0-preview4" />
    <PackageReference Include="Avalonia.Desktop" Version="0.9.0-preview4" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="0.9.0-preview4" />
    <PackageReference Include="Avalonia.Xaml.Behaviors" Version="0.9.0-build20191017-01" />
    <PackageReference Include="Avalonia.Xaml.Interactions" Version="0.9.0-build20191017-01" />
    <PackageReference Include="Avalonia.Xaml.Interactivity" Version="0.9.0-build20191017-01" />
    <PackageReference Include="GridExtra.Avalonia" Version="0.6.1" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
    </Compile>
    <AvaloniaResource Include="**\*.xaml">
      <SubType>Designer</SubType>
    </AvaloniaResource>
    <AvaloniaResource Include="Assets\*" />
  </ItemGroup>

 
</Project>
