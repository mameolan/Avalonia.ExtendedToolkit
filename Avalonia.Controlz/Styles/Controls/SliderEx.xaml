  <Style Selector="Controlz|SliderEx[Orientation=Horizontal]">
    <Setter Property="Background"
            Value="Transparent"/>
    <Setter Property="Foreground"
            Value="#FFC4C4C4"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate>
          <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  >
            <Grid>
              <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"
                               MinHeight="20"/>
                <!--MinHeight="{TemplateBinding MinHeight}"-->

                <RowDefinition Height="Auto"/>
              </Grid.RowDefinitions>
              <!-- Top TickBar: Will be shown only when Slider.TickPlacement = TopLeft or Both -->
              <Controlz:TickBar x:Name="TopTick"
                       Grid.Row="0"
                       IsVisible="False"
                       Placement="Top"
                       Fill="{TemplateBinding Foreground}"
                       Height="4"/>
              <!-- Bottom TickBar: Will be shown only when Slider.TickPlacement = BottomRight or Both -->
              <Controlz:TickBar x:Name="BottomTick"
                       Grid.Row="2"
                       IsVisible="False"
                       Placement="Bottom"
                       Fill="{TemplateBinding Foreground}"
                       Height="4"/>
              <!-- Slider Track Background -->
              <Border x:Name="TrackBackground"
                      Grid.Row="1"
                      Margin="5,0"
                      VerticalAlignment="Center"
                      BorderBrush="{StaticResource HorizontalSliderTrackNormalBorder}"
                      BorderThickness="1"
                      CornerRadius="1"
                      Background="{StaticResource HorizontalSliderTrackNormalBackground}"
                      Height="4.0">
                <!-- SelectionRangeElement (draw on top of Track background) -->
                <Canvas Margin="-6,-1">
                  <Rectangle x:Name="PART_SelectionRange"
                             Fill="{DynamicResource ThemeHighlightBrushKey}"
                             Height="4.0"
                             IsVisible="False"
                             StrokeThickness="1.0"
                             Stroke="{DynamicResource ThemeBorderLowBrush}}"/>
                </Canvas>
              </Border>
              <!-- MainPartsPanel -->
              <Track Grid.Row="1" Orientation="Horizontal"
                     Name="PART_Track">
                <Track.DecreaseButton>
                  <RepeatButton Classes="SliderRepeatButtonStyle"
                                Command="{x:Static Controlz:SliderEx.DecreaseLargeCommand}"/>
                </Track.DecreaseButton>
                <Track.IncreaseButton>
                  <RepeatButton Classes="SliderRepeatButtonStyle"
                                Command="{x:Static Controlz:SliderEx.IncreaseLargeCommand}"/>
                </Track.IncreaseButton>
                <Track.Thumb>
                  <Thumb MinWidth="20" MinHeight="20" Name="Thumb" Classes="HorizontalSliderThumbStyle}">
                    <Thumb.Template>
                      <ControlTemplate>
                        <Grid>
                          <Ellipse Width="12" Height="12" Fill="{DynamicResource ThemeAccentBrush}"/>
                        </Grid>
                      </ControlTemplate>
                    </Thumb.Template>
                  </Thumb>
                </Track.Thumb>
              </Track>
            </Grid>
          </Border>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

